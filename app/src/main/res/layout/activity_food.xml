<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodActivity">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="410dp"
        android:layout_height="165dp"
        android:background="#30A4C7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="174dp"
        android:layout_height="35dp"
        android:text="food"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="417dp"
        android:layout_height="567dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        tools:layout_editor_absoluteX="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="    Adobo"
                android:textAlignment="textStart"
                android:textColor="#534747"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To eat like a Filipino, all you need is rice and a bowl of adobo. Take chicken or pork, simmer in vinegar and soy sauce, and you get adobo - one of the few dishes in the Philippines that must have originated locally, without any foreign influence (the Spanish name is a later addition).  Adobo is as Filipino as you can get; it goes with rice and no other, and every province has its own way of cooking the stuff."
                android:textAlignment="textStart"
                android:textColor="#969696"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="    Pancit"
                android:textAlignment="textStart"
                android:textColor="#534747"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chinese traders were already doing business in the Philippines long before the Spanish came over the horizon. Their influence on Filipino food spread far and wide, most notably in the noodle dish category known as pancit (derived from the Hokkien for “something conveniently cooked”).  Pancit has become the catch-all term for a noodle dish, its name belying the bewildering variations of pancit from place to place."
                android:textAlignment="textStart"
                android:textColor="#969696"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="    Lumpia"
                android:textAlignment="textStart"
                android:textColor="#534747"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chinese-style egg rolls are quite common throughout Southeast Asia, adapting to local ingredients and tastes to become something utterly local. Filipino lumpia uses pork or beef, heart of palm, vegetables, and seafood—all tucked into a thin crepe and either fried or served fresh.  (There’s even a sweet version of lumpia, consisting of saba bananas and a little jackfruit rolled in lumpia wrapper and deep-fried with sugar—Filipinos call it turon.)"
                android:textAlignment="textStart"
                android:textColor="#969696"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="    Balut"
                android:textAlignment="textStart"
                android:textColor="#534747"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eating duck embryo - balut - has become a rite of passage for backpackers traveling to the Philippines. Many backpacker joints in Manila make balut-eating part of its introduction to Filipino drinking culture."
                android:textAlignment="textStart"
                android:textColor="#969696"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="    Kare-Kare"
                android:textAlignment="textStart"
                android:textColor="#534747"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ut beef tripe and oxtail into a peanut stew, garnish with vegetables, and pair with rice: you get the Filipino home-cooking favorite known as kare-kare. Name aside, the dish has less to do with curry and more to do with satay: a duet of meat and peanut combined that is much, much better than just the sum of its parts.  The addition of eggplant, daikon, okra, banana flower bud and green beans makes kare-kare a glorious all-around dish (in fact, you can find vegetarian or vegan versions that leave out the meat altogether)."
                android:textAlignment="textStart"
                android:textColor="#969696"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>